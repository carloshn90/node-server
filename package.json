{
  "name": "first-node-project",
  "version": "0.0.1",
  "description": "First node project to learn",
  "scripts": {
    "start": "set debug=* && ts-node-dev --respawn --transpileOnly ./src/server.ts",
    "build": "npm run build-ts",
    "build-ts": "tsc",
    "prod": "tsc && node ./dist/server.js",
    "serve": "node dist/server.js",
    "tsc": "tsc",
    "int-test": "mocha -r ts-node/register test/int/**/*.spec.ts --exit",
    "unit-test": "mocha -r ts-node/register test/unit/**/*.spec.ts",
    "test": "mocha -r ts-node/register test/**/*.spec.ts --exit",
    "coverage": "nyc npm run test"
  },
  "author": "Carlos Hernandez Navarro",
  "license": "ISC",
  "engines": {
    "node": "12.12.0"
  },
  "dependencies": {
    "@types/body-parser": "^1.17.1",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.1",
    "@types/helmet": "0.0.44",
    "@types/jsonwebtoken": "^8.3.5",
    "@typescript-eslint/parser": "^2.4.0",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-validator": "^6.4.0",
    "helmet": "^3.21.1",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.15",
    "mongoose": "^5.7.5",
    "sinon": "^8.1.1",
    "typescript": "^3.6.4",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/chai": "^4.2.3",
    "@types/chai-as-promised": "^7.1.2",
    "@types/chai-http": "^4.2.0",
    "@types/lodash": "^4.14.144",
    "@types/mocha": "^5.2.7",
    "@types/mongodb": "^3.3.6",
    "@types/mongoose": "^5.5.22",
    "@types/sinon": "^7.5.0",
    "@types/sinon-express-mock": "^1.3.7",
    "@typescript-eslint/eslint-plugin": "^2.4.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chai-http": "^4.3.0",
    "eslint": "^6.5.1",
    "mocha": "^6.2.2",
    "nyc": "^14.1.1",
    "sinon-chai": "^3.3.0",
    "sinon-express-mock": "^2.2.1",
    "ts-node": "^8.4.1",
    "ts-node-dev": "^1.0.0-pre.43",
    "ts-sinon": "^1.0.25"
  }
}
